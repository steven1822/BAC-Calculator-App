<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="BAC_Calc_App.Veiws.SetupPage"
             Title="SetupPage">
    <VerticalStackLayout Padding="20" Spacing="15">
        <Label Text="Enter your weight (lbs):" FontSize="18" />
        <Entry x:Name="WeightEntry" Keyboard="Numeric" Placeholder="Enter weight"/>

        <Button Text="Save and Continue" Clicked="OnSaveClicked" />
    </VerticalStackLayout>
</ContentPage>